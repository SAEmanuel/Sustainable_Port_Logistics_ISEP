###
# 9. POST Create - Valid
POST {{portURL}}/api/storageareas
Content-Type: application/json
Accept: application/json

{
  "name": "Yard B",
  "description": "Secondary yard near Dock 2",
  "type": "Yard",
  "maxBays": 3,
  "maxRows": 2,
  "maxTiers": 2,
  "distancesToDocks": [
    { "dockCode": "DK-0001", "distanceKm": 0.7 }
  ],
  "physicalResources": ["TRUCK-0001"]
}


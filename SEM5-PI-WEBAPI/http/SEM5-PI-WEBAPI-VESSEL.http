@portURL = http://10.9.21.87:5008

# --- VESSEL ---

###
# 1. GET all vessels (list, possibly empty)
GET {{portURL}}/api/vessel
Accept: application/json

###
# 2. GET by Id - valid (replace GUID with an existing vessel)
GET {{portURL}}/api/vessel/id/cbfa5eb4-7d11-4032-baeb-c2bdaa888ce6
Accept: application/json

###
# 3. GET by Id - not found
GET {{portURL}}/api/vessel/id/00000000-0000-0000-0000-000000000000
Accept: application/json

###
# 4. GET by IMO - valid
GET {{portURL}}/api/vessel/imo/IMO 9706906
Accept: application/json

###
# 5. GET by IMO - invalid (wrong format)
GET {{portURL}}/api/vessel/imo/9706906XYZ
Accept: application/json

###
# 6. GET by Name - valid
GET {{portURL}}/api/vessel/name/Ever Given
Accept: application/json

###
# 7. GET by Name - not found
GET {{portURL}}/api/vessel/name/NonExistentVessel
Accept: application/json

###
# 8. GET by Owner - valid
GET {{portURL}}/api/vessel/owner/Evergreen Marine
Accept: application/json

###
# 9. GET by Owner - not found
GET {{portURL}}/api/vessel/owner/UnknownOwnerCo
Accept: application/json


# --- POST (Create) ---

###

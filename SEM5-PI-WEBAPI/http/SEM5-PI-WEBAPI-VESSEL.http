POST {{portURL}}/api/vessel
Content-Type: application/json
Accept: application/json

{
  "imoNumber": "IMO 9876543",
  "name": "Ever Given",
  "owner": "Evergreen Marine",
  "vesselTypeName": "Panamax"
}

